/*
 * -------------------------------------------------
 *  JunctionCalling Nextflow base config file
 * -------------------------------------------------
 * General defaults for process resources and error handling.
 */

process {

  /*
   * Default resources (will be limited by check_max() in nextflow.config)
   */
  cpus   = { check_max( 1 * task.attempt, 'cpus' ) }
  memory = { check_max( 2.GB * task.attempt, 'memory' ) }   // was 7.GB; lower default for Stage1
  time   = { check_max( 4.h * task.attempt, 'time' ) }

  errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }
  maxRetries = 1
  maxErrors  = '-1'

  /*
   * Generic labels (optional, keep for future extension)
   */
  withLabel:process_low {
    cpus   = { check_max( 1 * task.attempt, 'cpus' ) }
    memory = { check_max( 2.GB * task.attempt, 'memory' ) }
    time   = { check_max( 2.h * task.attempt, 'time' ) }
  }

  withLabel:process_medium {
    cpus   = { check_max( 2 * task.attempt, 'cpus' ) }
    memory = { check_max( 4.GB * task.attempt, 'memory' ) }
    time   = { check_max( 6.h * task.attempt, 'time' ) }
  }

  withLabel:process_high {
    cpus   = { check_max( 4 * task.attempt, 'cpus' ) }
    memory = { check_max( 8.GB * task.attempt, 'memory' ) }
    time   = { check_max( 12.h * task.attempt, 'time' ) }
  }

  withLabel:process_long {
    time = { check_max( 20.h * task.attempt, 'time' ) }
  }

  /*
   * JunctionCalling Stage1 process-specific overrides
   * (Only include names that exist in JunctionStage1.nf)
   */

  withName: CHECK_UNIQ_MAPQ {
    cpus = 1
    memory = { check_max( 4.GB * task.attempt, 'memory' ) }   // important: avoid sandbox extract killed
    time = { check_max( 1.h * task.attempt, 'time' ) }
  }

  withName: FILTER_UNIQ_BAM {
    cpus = 1
    memory = { check_max( 4.GB * task.attempt, 'memory' ) }
    time = { check_max( 2.h * task.attempt, 'time' ) }
  }

  withName: EXTRACT_JUNCTIONS {
    cpus = 1
    memory = { check_max( 4.GB * task.attempt, 'memory' ) }   // safe default
    time = { check_max( 6.h * task.attempt, 'time' ) }
  }

  withName: CLUSTER_JUNCTIONS {
    cpus = 1
    memory = { check_max( 8.GB * task.attempt, 'memory' ) }
    time = { check_max( 12.h * task.attempt, 'time' ) }
  }

}
